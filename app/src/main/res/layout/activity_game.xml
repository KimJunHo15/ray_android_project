<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".GameActivity">

    <ImageView
        android:id="@+id/game_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toStartOf="@+id/game_2"
        app:layout_constraintTop_toTopOf="@+id/game_2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/game_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/game_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="@+id/game_2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/game_2"
        app:layout_constraintTop_toBottomOf="@+id/game_2"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/game_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        app:layout_constraintEnd_toEndOf="@+id/game_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/game_1"
        app:layout_constraintTop_toBottomOf="@+id/game_1"
        tools:srcCompat="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="게임 1"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/game_1"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/game_1"
        app:layout_constraintTop_toBottomOf="@+id/game_1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="게임 2"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/game_2"
        app:layout_constraintStart_toStartOf="@+id/game_2"
        app:layout_constraintTop_toBottomOf="@+id/game_2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="게임 3"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/game_4"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/game_4"
        app:layout_constraintTop_toBottomOf="@+id/game_4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="게임 4"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/game_3"
        app:layout_constraintStart_toStartOf="@+id/game_3"
        app:layout_constraintTop_toBottomOf="@+id/game_3" />

    <ImageView
        android:id="@+id/img_return_g"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</androidx.constraintlayout.widget.ConstraintLayout>