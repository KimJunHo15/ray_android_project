<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_game_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왼손 오른손을 찾아라!"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/game_4"
        app:layout_constraintStart_toEndOf="@+id/game_4"
        app:layout_constraintTop_toTopOf="@+id/game_4" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카드 맞추기"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/game_2"
        app:layout_constraintStart_toEndOf="@+id/game_2"
        app:layout_constraintTop_toTopOf="@+id/game_2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <ImageView
        android:id="@+id/img_return_g"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/game_1"
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="@drawable/number" />

    <ImageView
        android:id="@+id/game_2"
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="@+id/game_1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/game_1"
        app:layout_constraintTop_toBottomOf="@+id/game_1"
        app:srcCompat="@drawable/card2" />

    <ImageView
        android:id="@+id/game_4"
        android:layout_width="280dp"
        android:layout_height="260dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="@+id/game_2"
        app:layout_constraintTop_toBottomOf="@+id/game_2"
        app:srcCompat="@drawable/hand" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="숫자 순서대로 누르기"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/game_1"
        app:layout_constraintStart_toEndOf="@+id/game_1"
        app:layout_constraintTop_toTopOf="@+id/game_1" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="480dp"
        android:layout_height="240dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.188"
        app:srcCompat="@drawable/logo_write" />

</androidx.constraintlayout.widget.ConstraintLayout>