<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_training"
        android:layout_width="257dp"
        android:layout_height="278dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/big_logo" />

    <TextView
        android:id="@+id/tv_training_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="tv_training_t"
        android:textSize="48dp"
        app:layout_constraintStart_toEndOf="@+id/img_training"
        app:layout_constraintTop_toTopOf="@+id/img_training" />

    <TextView
        android:id="@+id/tv_training_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="tv_training_c"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_training_t"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_training_t"
        app:layout_constraintTop_toBottomOf="@+id/tv_training_t" />
</androidx.constraintlayout.widget.ConstraintLayout>