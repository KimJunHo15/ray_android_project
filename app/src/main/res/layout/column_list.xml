<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_column"
        android:layout_width="257dp"
        android:layout_height="278dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/big_logo" />

    <TextView
        android:id="@+id/tv_column_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tv_column_t"
        android:textSize="48dp"
        app:layout_constraintEnd_toEndOf="@+id/img_column"
        app:layout_constraintStart_toStartOf="@+id/img_column"
        app:layout_constraintTop_toBottomOf="@+id/img_column" />

    <TextView
        android:id="@+id/tv_column_c"
        android:layout_width="665dp"
        android:layout_height="753dp"
        android:layout_marginTop="8dp"
        android:text="tv_column_c"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="@+id/tv_column_t"
        app:layout_constraintStart_toStartOf="@+id/tv_column_t"
        app:layout_constraintTop_toBottomOf="@+id/tv_column_t" />
</androidx.constraintlayout.widget.ConstraintLayout>